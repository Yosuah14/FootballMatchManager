<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuOpciones">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarmenuprincipal"
        android:layout_width="408dp"
        android:layout_height="76dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/textoMenuopciones"
        android:layout_width="351dp"
        android:layout_height="75dp"
        android:fontFamily="@font/press_start_2p"
        android:text="@string/menudeopciones"
        android:textColor="@android:color/white"
        android:textColorHint="#19BFB9"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.733"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.042" />

    <Button
        android:id="@+id/btnAcercaDe"
        android:layout_width="153dp"
        android:layout_height="37dp"
        android:background="@color/CustomColor1"
        android:backgroundTint="#E12525"
        android:fontFamily="@font/press_start_2p"
        android:text="@string/acercade"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.104"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.886" />

    <Button
        android:id="@+id/Preferencias"
        android:layout_width="253dp"
        android:layout_height="74dp"
        android:background="@color/CustomColor1"
        android:backgroundTint="#E12525"
        android:fontFamily="@font/press_start_2p"
        android:text="@string/preferencias"
        android:textColor="@android:color/white"
        android:textSize="13sp"
        app:icon="@drawable/baseline_room_preferences_24"
        app:iconSize="40dp"
        app:iconTint="@color/md_theme_dark_onBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.722" />

    <Button
        android:id="@+id/contacto"
        android:layout_width="153dp"
        android:layout_height="37dp"
        android:background="@color/CustomColor1"
        android:backgroundTint="#E12525"
        android:fontFamily="@font/press_start_2p"
        android:text="@string/contacto"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.941"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.886" />

    <Button
        android:id="@+id/crearJugador"
        android:layout_width="253dp"
        android:layout_height="74dp"
        android:background="@drawable/common_google_signin_btn_text_dark_normal_background"
        android:fontFamily="@font/press_start_2p"
        android:text="@string/crearjugadores"
        android:textColor="@color/md_theme_dark_onBackground"
        android:textSize="16sp"
        app:icon="@drawable/baseline_person_add_alt_1_25"
        app:iconSize="40dp"
        app:iconTint="@color/md_theme_dark_onBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.115" />

    <Button
        android:id="@+id/btnCrearPartidos"
        android:layout_width="253dp"
        android:layout_height="74dp"
        android:background="@drawable/common_google_signin_btn_text_dark_normal_background"
        android:fontFamily="@font/press_start_2p"
        android:text="@string/crearpartidos"
        android:textColor="@color/md_theme_dark_onBackground"
        android:textSize="16sp"
        app:icon="@drawable/twotone_stadium_24"
        app:iconSize="40dp"
        app:iconTint="@color/md_theme_dark_onBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.266" />

    <Button
        android:id="@+id/Rankingbutton"
        android:layout_width="253dp"
        android:layout_height="74dp"
        android:background="@drawable/common_google_signin_btn_text_dark_normal_background"
        android:fontFamily="@font/press_start_2p"
        android:text="@string/rankings"
        android:textColor="@color/md_theme_dark_onBackground"
        android:textSize="16sp"
        app:icon="@drawable/sharp_sports_score_24"
        app:iconSize="40dp"
        app:iconTint="@color/md_theme_dark_onBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.421" />

    <Button
        android:id="@+id/crearBalon"
        android:layout_width="253dp"
        android:layout_height="74dp"
        android:background="@drawable/common_google_signin_btn_text_dark_normal_background"
        android:fontFamily="@font/press_start_2p"
        android:text="@string/jugarbalon"
        android:textColor="@color/md_theme_dark_onBackground"
        android:textSize="16sp"
        app:icon="@drawable/baseline_sports_soccer_24"
        app:iconSize="40dp"
        app:iconTint="@color/md_theme_dark_onBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.573" />

</androidx.constraintlayout.widget.ConstraintLayout>