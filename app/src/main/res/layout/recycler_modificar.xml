<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- ImageView para la imagen -->

    <!-- TextView para el primer texto -->

    <!-- TextView para el segundo texto -->

    <!-- Button para realizar acciones -->


    <Button
        android:id="@+id/btnmodi"
        android:layout_width="104dp"
        android:layout_height="79dp"
        android:text="Modificar"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.503" />


    <!-- Otros elementos -->

    <!-- Otros elementos -->

    <TextView
        android:id="@+id/textViewDetalle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="268dp"
        android:text="Goles"
        android:textColor="@color/md_theme_dark_onBackground"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.381" />

    <TextView
        android:id="@+id/asistencias"
        android:layout_width="91dp"
        android:layout_height="22dp"
        android:text="Asistencias"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/textViewDetalle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/textViewDetalle"
        app:layout_constraintTop_toBottomOf="@id/textViewDetalle" />

    <TextView
        android:id="@+id/jugadorModificado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColorHighlight="@color/md_theme_dark_onBackground"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@id/posicion"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/posicion"
        app:layout_constraintTop_toBottomOf="@id/posicion" />

    <TextView
        android:id="@+id/posicion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Posicion"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@id/mvp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/mvp"
        app:layout_constraintTop_toBottomOf="@id/mvp" />

    <TextView
        android:id="@+id/mvp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="MVP"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/asistencias"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/asistencias"
        app:layout_constraintTop_toBottomOf="@id/asistencias" />

    <TextView
        android:id="@+id/textViewNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.294"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Otros elementos -->

    <!-- Otros elementos -->


</androidx.constraintlayout.widget.ConstraintLayout>